<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".Old_Document">


    <ImageView
        android:id="@+id/cat_group"
        android:layout_width="343dp"
        android:layout_height="200dp"
        android:src="@drawable/book_cat"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/txt_currentDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 문서집"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/cat_group"
        app:layout_constraintStart_toStartOf="@+id/cat_group"/>
    <TextView
        android:id="@+id/documentTitle"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:text="사이드바에서 설정해주세요"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/editbutton"
        app:layout_constraintTop_toBottomOf="@+id/txt_currentDocument"
        app:layout_constraintStart_toStartOf="@id/txt_currentDocument"/>
        <!--경계 나누기-->
    <LinearLayout
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F3F4F6"
        app:layout_constraintTop_toBottomOf="@id/documentTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/fileUploadSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_oldGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파일 이름"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/viewFilename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_box"
            android:text="파일을 선택해주세요"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="10dp" />

        <ProgressBar
            android:id="@+id/uploadProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/selectFileButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/strokedesign"
            android:text="파일 찾기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/loginbutton"
            android:text="업로드"
            android:textColor="@color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>