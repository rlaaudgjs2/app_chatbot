<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".Old_Document">


    <ImageView
        android:id="@+id/cat_group"
        android:layout_width="186dp"
        android:layout_height="352dp"
        android:src="@drawable/book_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/txt_newGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 문서집"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <TextView
        android:id="@+id/txt_oldGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문서 저장"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <TextView
        android:id="@+id/viewFilename"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:text="파일을 선택해주세요"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintTop_toBottomOf="@+id/txt_oldGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/recived"
        android:text="파일 선택"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/viewFilename"
        app:layout_constraintTop_toTopOf="@+id/viewFilename"
        app:layout_constraintLeft_toRightOf="@+id/viewFilename"
        android:layout_marginStart="5dp"
        />

    <Button
        android:id="@+id/document_delete"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recived"
        android:text="삭제"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/viewFilename"
        app:layout_constraintRight_toRightOf="@+id/viewFilename" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/recived"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="업로드"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/viewFilename"
        app:layout_constraintLeft_toLeftOf="@+id/viewFilename"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-56dp"
        tools:layout_editor_absoluteY="382dp" />


</androidx.constraintlayout.widget.ConstraintLayout>