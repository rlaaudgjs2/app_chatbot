<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".GroupCreate">


    <ImageView
        android:id="@+id/cat_group"
        android:layout_width="343dp"
        android:layout_height="200dp"
        android:src="@drawable/cat_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/txt_newGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 그룹 만들기"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cat_group" />

    <EditText
        android:id="@+id/new_group"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:background="@drawable/edit_box"
        android:paddingStart="10dp"
        android:hint="새로운 그룹을 만들어보세요"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_newGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.widget.Button
        android:id="@+id/button_create"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:background="@drawable/loginbutton"
        android:text="만들기"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/new_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- 추가된 "또는" 섹션 -->
    <LinearLayout
        android:id="@+id/or_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- 왼쪽 선 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <!-- "또는" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="또는"
            android:textColor="@android:color/black"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="14sp" />

        <!-- 오른쪽 선 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_oldGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존 그룹 참여하기"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/or_section" />

    <EditText
        android:id="@+id/old_group"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_box"
        android:hint="초대 코드를 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/txt_oldGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.widget.Button
        android:id="@+id/button_join"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:background="@drawable/edit_box"
        android:text="참여하기"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_group" />

</androidx.constraintlayout.widget.ConstraintLayout>
