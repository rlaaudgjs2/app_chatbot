<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SignUp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/signupimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.widget.Button
        android:id="@+id/duple_check_name"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/catbutton"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/signUp_nickname"
        app:layout_constraintTop_toTopOf="@+id/signUp_nickname"
        app:layout_constraintBottom_toBottomOf="@+id/signUp_nickname"
        />

    <android.widget.Button
        android:id="@+id/duple_check_id"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/catbutton"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/signUp_id"
        app:layout_constraintTop_toTopOf="@+id/signUp_id"
        app:layout_constraintBottom_toBottomOf="@+id/signUp_id"
         />

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <EditText
        android:id="@+id/signUp_name"
        android:layout_width="370dp"
        android:layout_height="44dp"
        android:background="@drawable/edit_box"
        android:hint="이름을 입력하세요"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:textColorHint="@color/textHintColor"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textname"
        />
        <TextView
            android:id="@+id/textnickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/signUp_name" />
        <EditText
            android:id="@+id/signUp_nickname"
            android:layout_width="315dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_box"
            android:hint="닉네임을 입력하세요"
            android:textSize="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="@color/textHintColor"
            app:layout_constraintStart_toStartOf="@+id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/textnickname" />

        <TextView
            android:id="@+id/textphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="전화번호"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/signUp_nickname" />

        <EditText
            android:id="@+id/signUp_phone_number"
            android:layout_width="370dp"
            android:layout_height="44dp"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/edit_box"
            android:hint="- 빼고 입력하세요"
            android:textSize="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="@color/textHintColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textphone" />

        <TextView
            android:id="@+id/textid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="아이디"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/signUp_phone_number" />

        <EditText
        android:id="@+id/signUp_id"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:background="@drawable/edit_box"
        android:hint="아이디를 입력하세요"
        android:textSize="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/textHintColor"
        app:layout_constraintStart_toStartOf="@+id/signUp_name"
        app:layout_constraintTop_toBottomOf="@+id/textid" />
        <TextView
            android:id="@+id/textpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/signUp_id" />

        <EditText
            android:id="@+id/signUp_password"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_box"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="@color/textHintColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textpassword" />


        <TextView
            android:id="@+id/textduplepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호 확인"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/signUp_name"
            app:layout_constraintStart_toStartOf="@id/signUp_name"
            app:layout_constraintTop_toBottomOf="@+id/signUp_password" />

        <EditText
            android:id="@+id/signUp_password_duple"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_box"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="@color/textHintColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textduplepassword" />


        <android.widget.Button
            android:id="@+id/signUp_button"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/loginbutton"
            android:text="가입하기"
            android:textColor="@color/white"

            app:layout_constraintLeft_toLeftOf="@id/signUp_password_duple"
            app:layout_constraintRight_toRightOf="@id/signUp_password_duple"
            app:layout_constraintTop_toBottomOf="@+id/signUp_password_duple" />

        <TextView
            android:id="@+id/signup_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있으신가요? 로그인하기"
            android:textColor="#4B5563"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/signUp_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_change"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>