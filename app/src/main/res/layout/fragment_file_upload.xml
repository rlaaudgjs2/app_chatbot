<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fileUploadContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown">

    <TextView
        android:id="@+id/viewFilename"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="파일을 선택해주세요"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/recived"
        android:text="파일 선택"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/viewFilename"
        app:layout_constraintLeft_toRightOf="@+id/viewFilename"
        android:layout_marginStart="5dp"
         />

    <Button
        android:id="@+id/document_delete"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/recived"
        android:text="삭제"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/viewFilename"
        app:layout_constraintRight_toRightOf="@+id/viewFilename"/>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/recived"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="업로드"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/viewFilename"
        app:layout_constraintLeft_toLeftOf="@+id/viewFilename"
         />
</androidx.constraintlayout.widget.ConstraintLayout>
