<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".CreateDocument">



    <ImageView
        android:id="@+id/cat_group"
        android:layout_width="343dp"
        android:layout_height="250dp"
        android:src="@drawable/newdocumentimg"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <android.widget.Button
        android:id="@+id/document_commit"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:text="문서 추가"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/document_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

         />




    <EditText
        android:id="@+id/document_text"
        android:background="@drawable/edit_box"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:hint="문서집 이름 작성"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_newGroup" />

    <TextView
        android:id="@+id/txt_newGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 문서집 추가"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
         app:layout_constraintTop_toBottomOf="@+id/cat_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>